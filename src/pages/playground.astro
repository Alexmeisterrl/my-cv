---
import Layout from '../layouts/Layout.astro';
---

<Layout title="AI Playground | FingerCounting Demo">
  <main class="min-h-screen bg-slate-50 dark:bg-slate-950 p-4 md:p-8">
    <div class="max-w-5xl mx-auto">
      <header class="mb-8 flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-2">‚ú® AI Playground</h1>
          <p class="text-slate-500 dark:text-slate-400">Live Hand-Gestenerkennung Experiment</p>
        </div>
        <a href="/" class="text-sm font-bold text-indigo-600 dark:text-indigo-400 hover:underline">‚Üê Zur√ºck</a>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {/* Video & Canvas Area */}
        <div class="lg:col-span-2 relative bg-black rounded-3xl overflow-hidden shadow-2xl aspect-video border-4 border-white dark:border-slate-800">
          <video id="webcam" autoplay playsinline class="absolute inset-0 w-full h-full object-cover"></video>
          <canvas id="output_canvas" class="absolute inset-0 w-full h-full object-cover"></canvas>
          
          <div id="loading-overlay" class="absolute inset-0 bg-slate-900/80 backdrop-blur-sm flex flex-col items-center justify-center text-white z-20">
            <div class="w-12 h-12 border-4 border-indigo-500 border-t-transparent rounded-full animate-spin mb-4"></div>
            <p class="font-bold tracking-widest uppercase text-xs">Lade KI-Modelle...</p>
          </div>

          <div class="absolute bottom-6 left-6 z-30 flex gap-3">
             <div class="px-4 py-2 bg-black/50 backdrop-blur-md rounded-xl border border-white/20 text-white">
                <span class="text-xs uppercase font-bold text-indigo-300 block">Ergebnis</span>
                <span id="gesture-result" class="text-2xl font-black">Warte...</span>
             </div>
          </div>
        </div>

        {/* Controls & Info */}
        <div class="space-y-6">
          <div class="bg-white dark:bg-slate-900 p-6 rounded-3xl shadow-sm border border-slate-100 dark:border-slate-800">
            <h2 class="text-xl font-bold mb-4 dark:text-white text-slate-900">Steuerung</h2>
            <button id="enableWebcamButton" class="w-full py-4 bg-indigo-600 hover:bg-indigo-700 text-white rounded-2xl font-bold transition-all transform active:scale-95 shadow-lg shadow-indigo-200 dark:shadow-none mb-4">
              Kamera starten
            </button>
            <p class="text-xs text-slate-500 text-center">
              Hinweis: Der Zugriff erfolgt lokal in deinem Browser. Es werden keine Videodaten an einen Server gesendet.
            </p>
          </div>

          <div class="bg-white dark:bg-slate-900 p-6 rounded-3xl shadow-sm border border-slate-100 dark:border-slate-800">
            <h2 class="text-lg font-bold mb-4 dark:text-white text-slate-900">Erkannte Posen</h2>
            <div class="grid grid-cols-4 gap-2">
               {['0','1','2','3','4','5','üññ','?'].map(pose => (
                 <div class="aspect-square flex items-center justify-center bg-slate-50 dark:bg-slate-800 rounded-xl text-xl border border-slate-100 dark:border-slate-700 opacity-50 transition-all" data-pose={pose}>
                   {pose}
                 </div>
               ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Wir laden Mediapipe √ºber ein CDN
  import { HandLandmarker, FilesetResolver } from "https://cdn.jsdelivr.net/npm/@mediapipe/tasks-vision@0.10.0";

  let handLandmarker;
  let runningMode = "IMAGE";
  const video = document.getElementById("webcam");
  const canvasElement = document.getElementById("output_canvas");
  const canvasCtx = canvasElement.getContext("2d");
  const gestureResult = document.getElementById("gesture-result");
  const loadingOverlay = document.getElementById("loading-overlay");
  const enableWebcamButton = document.getElementById("enableWebcamButton");

  // Initialisierung der Hand-Erkennung
  const createHandLandmarker = async () => {
    const vision = await FilesetResolver.forVisionTasks(
      "https://cdn.jsdelivr.net/npm/@mediapipe/tasks-vision@0.10.0/wasm"
    );
    handLandmarker = await HandLandmarker.createFromOptions(vision, {
      baseOptions: {
        modelAssetPath: `https://storage.googleapis.com/mediapipe-models/hand_landmarker/hand_landmarker/float16/1/hand_landmarker.task`,
        delegate: "GPU"
      },
      runningMode: "VIDEO",
      numHands: 2
    });
    loadingOverlay.classList.add("hidden");
  };
  createHandLandmarker();

  // Kamera-Logik
  const hasGetUserMedia = () => !!(navigator.mediaDevices && navigator.mediaDevices.getUserMedia);

  if (hasGetUserMedia()) {
    enableWebcamButton.addEventListener("click", enableCam);
  } else {
    console.warn("getUserMedia() wird von deinem Browser nicht unterst√ºtzt");
  }

  function enableCam() {
    if (!handLandmarker) {
      console.log("Warte auf Modell...");
      return;
    }

    const constraints = { video: true };
    navigator.mediaDevices.getUserMedia(constraints).then((stream) => {
      video.srcObject = stream;
      video.addEventListener("loadeddata", predictWebcam);
      enableWebcamButton.classList.add("hidden");
    });
  }

  let lastVideoTime = -1;
  let results = undefined;

  async function predictWebcam() {
    canvasElement.style.width = video.videoWidth;
    canvasElement.style.height = video.videoHeight;
    canvasElement.width = video.videoWidth;
    canvasElement.height = video.videoHeight;

    let startTimeMs = performance.now();
    if (lastVideoTime !== video.currentTime) {
      lastVideoTime = video.currentTime;
      results = handLandmarker.detectForVideo(video, startTimeMs);
    }

    canvasCtx.save();
    canvasCtx.clearRect(0, 0, canvasElement.width, canvasElement.height);
    
    if (results.landmarks && results.landmarks.length > 0) {
      for (const landmarks of results.landmarks) {
        // Zeichne die Punkte (einfache Version f√ºr den Start)
        drawConnectors(canvasCtx, landmarks, HAND_CONNECTIONS, { color: "#6366f1", lineWidth: 5 });
        drawLandmarks(canvasCtx, landmarks, { color: "#ffffff", lineWidth: 2, radius: 4 });
        
        // Hier kommt sp√§ter deine Logik aus dem Jupyter Notebook rein!
        analyzePose(landmarks);
      }
    } else {
      // Wenn keine Hand erkannt wird, "?" senden
      analyzePose(null);
    }
    canvasCtx.restore();
    window.requestAnimationFrame(predictWebcam);
  }

  // Hilfsfunktionen f√ºr das Zeichnen (Mediapipe Standard)
  function drawConnectors(ctx, landmarks, connections, style) {
     connections.forEach(([i, j]) => {
        const start = landmarks[i];
        const end = landmarks[j];
        ctx.beginPath();
        ctx.moveTo(start.x * canvasElement.width, start.y * canvasElement.height);
        ctx.lineTo(end.x * canvasElement.width, end.y * canvasElement.height);
        ctx.strokeStyle = style.color;
        ctx.lineWidth = style.lineWidth;
        ctx.stroke();
     });
  }

  function drawLandmarks(ctx, landmarks, style) {
     landmarks.forEach(point => {
        ctx.beginPath();
        ctx.arc(point.x * canvasElement.width, point.y * canvasElement.height, style.radius, 0, 2 * Math.PI);
        ctx.fillStyle = style.color;
        ctx.fill();
     });
  }

  const HAND_CONNECTIONS = [[0,1],[1,2],[2,3],[3,4],[0,5],[5,6],[6,7],[7,8],[5,9],[9,10],[10,11],[11,12],[9,13],[13,14],[14,15],[15,16],[13,17],[0,17],[17,18],[18,19],[19,20]];

  // Gl√§ttungs-Logik
  let gestureHistory = [];
  const HISTORY_SIZE = 5;

  function getDistance(p1, p2) {
      return Math.hypot(p1.x - p2.x, p1.y - p2.y, p1.z - p2.z);
  }

  // Pose-Analyse Logik (verfeinert basierend auf Notebook-Konzepten)
  function analyzePose(landmarks) {
      let currentResult = "?";

      if (landmarks) {
          const wrist = landmarks[0];
          
          // Finger-Spitzen und Vergleichsgelenke
          const tips = [8, 12, 16, 20]; // Zeige, Mittel, Ring, Kleiner
          const mcps = [5, 9, 13, 17];  // Wurzelgelenke
          
          let fingerStates = [false, false, false, false, false]; // Daumen, Zeige, Mittel, Ring, Kleiner

          // 1. Daumen-Logik (Abstand zur Kleinfingerwurzel & Handfl√§che)
          // Ein gespreizter Daumen ist weiter von der Handfl√§che weg
          const thumbTip = landmarks[4];
          const thumbIP = landmarks[3];
          const pinkyBase = landmarks[17];
          const distThumbToPinky = getDistance(thumbTip, pinkyBase);
          const distIPToPinky = getDistance(thumbIP, pinkyBase);
          fingerStates[0] = distThumbToPinky > distIPToPinky * 1.1;

          // 2. Die anderen 4 Finger
          // Ein Finger ist "oben", wenn die Spitze weiter vom Handgelenk entfernt ist als das Wurzelgelenk
          for (let i = 0; i < tips.length; i++) {
              const tipDist = getDistance(landmarks[tips[i]], wrist);
              const mcpDist = getDistance(landmarks[mcps[i]], wrist);
              fingerStates[i+1] = tipDist > mcpDist * 1.2; // Puffer f√ºr Kr√ºmmung
          }

          // 3. Spock-Erkennung (üññ)
          // Alle Finger oben, aber Fingerpaare (8,12) und (16,20) sind nah beieinander, 
          // w√§hrend zwischen (12) und (16) eine gro√üe L√ºcke ist.
          const distIndexMiddle = getDistance(landmarks[8], landmarks[12]);
          const distMiddleRing = getDistance(landmarks[12], landmarks[16]);
          const distRingPinky = getDistance(landmarks[16], landmarks[20]);
          
          const isSpock = fingerStates[1] && fingerStates[2] && fingerStates[3] && fingerStates[4] && 
                          distMiddleRing > (distIndexMiddle + distRingPinky) * 1.2;

          if (isSpock) {
              currentResult = "üññ";
          } else {
              currentResult = fingerStates.filter(s => s).length.toString();
          }
      }

      // 4. Konsens finden (Gl√§ttung)
      gestureHistory.push(currentResult);
      if (gestureHistory.length > HISTORY_SIZE) gestureHistory.shift();

      // H√§ufigstes Ergebnis der letzten N Frames nehmen
      const counts = {};
      gestureHistory.forEach(x => counts[x] = (counts[x] || 0) + 1);
      const consensus = Object.keys(counts).reduce((a, b) => counts[a] > counts[b] ? a : b);

      // UI Update
      gestureResult.innerText = (consensus === "üññ" || consensus === "?") ? (consensus === "üññ" ? "üññ SPOCK!" : "Suchen...") : consensus;
      updateUI(consensus);
  }

  function updateUI(activePose) {
      document.querySelectorAll('[data-pose]').forEach(el => {
          if (el.getAttribute('data-pose') === activePose) {
              el.classList.remove('opacity-50', 'bg-slate-50', 'dark:bg-slate-800');
              el.classList.add('opacity-100', 'bg-indigo-600', 'text-white', 'scale-110', 'shadow-lg');
          } else {
              el.classList.add('opacity-50', 'bg-slate-50', 'dark:bg-slate-800');
              el.classList.remove('opacity-100', 'bg-indigo-600', 'text-white', 'scale-110', 'shadow-lg');
          }
      });
  }
</script>
