---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import ScrollReveal from '../components/ScrollReveal.astro';
import content from '../../CONTENT.json';
import { ClientRouter } from 'astro:transitions';
---

<Layout title={`${content.name} | ${content.role}`}>
  <ClientRouter />
  <ThemeToggle />
  <ScrollReveal />
  
  <main class="max-w-6xl mx-auto p-4 md:p-8 min-h-screen">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 auto-rows-min">
      
      {/* Hero Section */}
      <section class="reveal md:col-span-3 md:row-span-2 bg-white dark:bg-gray-900 rounded-3xl p-8 md:p-12 shadow-sm border border-gray-100 dark:border-gray-800 flex flex-col justify-center transition-all duration-300 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-indigo-50 dark:bg-indigo-900/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>
        
        <div class="flex flex-col md:flex-row gap-8 items-center md:items-start">
          <div class="flex-1 text-center md:text-left">
             <div class="inline-flex items-center gap-2 px-3 py-1 bg-green-50 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-full text-sm font-medium w-fit mb-6 mx-auto md:mx-0">
              <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
              Verf√ºgbar f√ºr neue Projekte
            </div>
            <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight mb-6 leading-tight dark:text-white">
              Hallo, ich bin <span class="text-indigo-600 dark:text-indigo-400 italic">{content.name}</span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 max-w-2xl mb-8">
              {content.role} aus <span class="text-gray-900 dark:text-gray-200 font-medium underline decoration-indigo-200 dark:decoration-indigo-800 underline-offset-4">{content.location}</span>. 
              {content.about}
            </p>
            <div class="flex flex-wrap gap-4 justify-center md:justify-start">
              <a href={`mailto:${content.links.email}`} class="bg-indigo-600 text-white px-8 py-4 rounded-2xl font-semibold hover:bg-indigo-700 transition-all hover:scale-105 active:scale-95 shadow-lg shadow-indigo-100 dark:shadow-none">
                Kontaktieren
              </a>
              <div class="flex gap-2">
                 <a href={content.links.github} target="_blank" class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 p-4 rounded-2xl hover:bg-gray-50 dark:hover:bg-gray-700 transition-all">
                    <span class="sr-only">GitHub</span>
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.43.372.823 1.102.823 2.222 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
                 </a>
                 <a href={content.links.linkedin} target="_blank" class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 p-4 rounded-2xl hover:bg-gray-50 dark:hover:bg-gray-700 transition-all">
                    <span class="sr-only">LinkedIn</span>
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.761 0 5-2.239 5-5v-14c0-2.761-2.239-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                 </a>
              </div>
            </div>
          </div>
          <div class="relative group shrink-0">
            <div class="absolute inset-0 bg-indigo-600 rounded-3xl rotate-6 opacity-20 group-hover:rotate-12 transition-transform duration-300"></div>
            <img 
              src="/profile.jpg" 
              alt={content.name} 
              class="relative w-48 h-48 md:w-64 md:h-64 object-cover rounded-3xl shadow-2xl border-4 border-white dark:border-gray-800 rotate-3 group-hover:rotate-0 transition-transform duration-300"
            />
          </div>
        </div>
      </section>

      {/* About Section */}
      <section class="reveal md:col-span-1 md:row-span-2 bg-indigo-600 dark:bg-indigo-900/40 text-white rounded-3xl p-8 border border-indigo-500 dark:border-indigo-800/50 shadow-lg shadow-indigo-100 dark:shadow-none flex flex-col justify-between transition-all duration-300">
        <div>
          <h2 class="text-2xl font-bold mb-6">√úber mich</h2>
          <p class="text-indigo-50 dark:text-indigo-200 leading-relaxed text-lg italic">
            "{content.about}"
          </p>
        </div>
        <div class="mt-8 pt-8 border-t border-indigo-400/30">
          <p class="text-indigo-200 dark:text-indigo-400 text-sm uppercase tracking-widest font-bold">Location</p>
          <p class="text-xl font-medium">{content.location}</p>
        </div>
      </section>

      {/* Education Timeline */}
      <section class="reveal md:col-span-2 bg-white dark:bg-gray-900 rounded-3xl p-8 shadow-sm border border-gray-100 dark:border-gray-800 transition-all duration-300">
        <h2 class="text-2xl font-bold mb-8 flex items-center gap-2 dark:text-white">
          <span class="p-2 bg-purple-50 dark:bg-purple-900/20 rounded-lg">üéì</span> Schulische Laufbahn
        </h2>
        <div class="space-y-8 relative pl-8 before:absolute before:left-0 before:top-2 before:ml-3.5 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-purple-100 dark:before:from-purple-900/50 before:via-purple-50 dark:before:via-purple-900/30 before:to-transparent">
          {content.education.map((edu) => (
            <div class="relative group">
              <div class="absolute -left-[41px] top-1 flex items-center justify-center w-8 h-8 rounded-full border-2 border-white dark:border-gray-900 bg-purple-50 dark:bg-purple-900/50 text-purple-600 dark:text-purple-400 shadow-sm z-10 transition-colors duration-300">
                 <svg class="w-3.5 h-3.5 fill-current" viewBox="0 0 24 24"><circle cx="12" cy="12" r="6"/></svg>
              </div>
              <div class="p-5 rounded-2xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/30 hover:bg-white dark:hover:bg-gray-800 hover:shadow-md transition-all group-hover:border-purple-100 dark:group-hover:border-purple-700/50">
                <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-1 mb-2">
                  <h3 class="font-bold text-gray-900 dark:text-white text-lg">{edu.school}</h3>
                  <span class="text-xs font-bold uppercase tracking-wider text-purple-500 bg-purple-50 dark:bg-purple-900/30 px-2 py-1 rounded-md whitespace-nowrap">{edu.duration}</span>
                </div>
                <div class="text-purple-600 dark:text-purple-400 font-medium mb-2">{edu.degree}</div>
                <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">{edu.description}</p>
              </div>
            </div>
          ))}
        </div>
      </section>

      {/* Experience Timeline */}
      <section class="reveal md:col-span-2 bg-white dark:bg-gray-900 rounded-3xl p-8 shadow-sm border border-gray-100 dark:border-gray-800 transition-all duration-300">
        <h2 class="text-2xl font-bold mb-8 flex items-center gap-2 dark:text-white">
          <span class="p-2 bg-blue-50 dark:bg-blue-900/20 rounded-lg">üíº</span> Berufliche Laufbahn
        </h2>
        <div class="space-y-8 relative pl-8 before:absolute before:left-0 before:top-2 before:ml-3.5 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-indigo-100 dark:before:from-indigo-900/50 before:via-indigo-50 dark:before:via-indigo-900/30 before:to-transparent">
          {content.experience.map((exp) => (
            <div class="relative group">
              <div class="absolute -left-[41px] top-1 flex items-center justify-center w-8 h-8 rounded-full border-2 border-white dark:border-gray-900 bg-indigo-50 dark:bg-indigo-900/50 text-indigo-600 dark:text-indigo-400 shadow-sm z-10 transition-colors duration-300">
                <svg class="w-3.5 h-3.5 fill-current" viewBox="0 0 24 24"><circle cx="12" cy="12" r="6"/></svg>
              </div>
              <div class="p-5 rounded-2xl border border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/30 hover:bg-white dark:hover:bg-gray-800 hover:shadow-md transition-all group-hover:border-indigo-100 dark:group-hover:border-indigo-700/50">
                <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-1 mb-2">
                  <h3 class="font-bold text-gray-900 dark:text-white text-lg">{exp.company}</h3>
                  <span class="text-xs font-bold uppercase tracking-wider text-indigo-500 bg-indigo-50 dark:bg-indigo-900/30 px-2 py-1 rounded-md whitespace-nowrap">{exp.duration}</span>
                </div>
                <div class="text-indigo-600 dark:text-indigo-400 font-medium mb-2">{exp.position}</div>
                <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">{exp.description}</p>
                {exp.location && (
                  <div class="mt-3 flex items-center gap-1 text-xs text-gray-400 dark:text-gray-500 font-medium">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                    {exp.location}
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>

      {/* Projects Section */}
      <section class="reveal md:col-span-4 bg-white dark:bg-gray-900 rounded-3xl p-8 md:p-12 shadow-sm border border-gray-100 dark:border-gray-800 transition-all duration-300">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10 gap-4">
          <h2 class="text-3xl font-bold flex items-center gap-3 dark:text-white text-gray-900">
            <span class="p-2 bg-gray-100 dark:bg-gray-800 rounded-xl">üöÄ</span> Ausgew√§hlte Projekte
          </h2>
          <a href={content.links.github} class="text-gray-500 dark:text-gray-400 hover:text-indigo-600 dark:hover:text-white transition-colors flex items-center gap-2 font-medium">
            Alle Projekte ansehen <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {content.projects.map((project) => (
            <div class="group bg-gray-50 dark:bg-gray-800/50 p-6 rounded-2xl border border-gray-100 dark:border-gray-700/50 hover:bg-white dark:hover:bg-gray-800 hover:shadow-md transition-all flex flex-col">
              <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">{project.title}</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4 text-sm line-clamp-3">{project.description}</p>
              
              <div class="flex flex-wrap gap-2 mb-6">
                {project.tech.map((t) => (
                  <span class="text-[10px] uppercase tracking-wider font-bold px-2 py-1 bg-white dark:bg-gray-700 text-gray-500 dark:text-gray-300 rounded-md border border-gray-100 dark:border-gray-600">
                    {t}
                  </span>
                ))}
              </div>

              <div class="mt-auto flex gap-3">
                <a href={project.link} target="_blank" class="text-xs font-bold uppercase tracking-widest text-gray-400 hover:text-indigo-600 transition-colors flex items-center gap-1">
                   GitHub <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                </a>
                {project.demoLink && (
                  <a href={project.demoLink} class="text-xs font-bold uppercase tracking-widest text-indigo-600 dark:text-indigo-400 hover:opacity-70 transition-colors flex items-center gap-1">
                     Live Demo <span class="animate-pulse text-lg">‚ú®</span>
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>

      {/* Skills Section */}
      <section class="reveal md:col-span-1 bg-white dark:bg-gray-900 rounded-3xl p-6 shadow-sm border border-gray-100 dark:border-gray-800 transition-all duration-300">
        <h2 class="text-xl font-bold mb-4 flex items-center gap-2 dark:text-white">
           <span class="p-1.5 bg-amber-50 dark:bg-amber-900/20 rounded-lg text-lg">üõ†Ô∏è</span> Skills
        </h2>
        <div class="flex flex-wrap gap-2">
          {content.skills.map((skill) => (
            <span class="bg-gray-50 dark:bg-gray-800 text-gray-700 dark:text-gray-300 px-3 py-1.5 rounded-lg text-xs font-semibold border border-gray-100 dark:border-gray-700">
              {skill}
            </span>
          ))}
        </div>
      </section>

      {/* GitHub Tile */}
      <a href={content.links.github} target="_blank" class="reveal md:col-span-1 bg-gray-900 dark:bg-indigo-950 rounded-3xl p-6 shadow-lg border border-gray-800 dark:border-indigo-900/50 flex flex-col justify-between group hover:scale-[1.02] transition-all duration-300">
        <div class="flex justify-between items-start">
          <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.43.372.823 1.102.823 2.222 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
          <svg class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
        </div>
        <div>
          <h3 class="text-white font-bold text-lg mb-1">GitHub</h3>
          <p class="text-gray-400 text-xs">Source Code & Projekte</p>
        </div>
      </a>

      {/* Languages Section */}
      <section class="reveal md:col-span-1 bg-white dark:bg-gray-900 rounded-3xl p-6 shadow-sm border border-gray-100 dark:border-gray-800 transition-all duration-300">
        <h3 class="text-lg font-bold mb-4 flex items-center gap-2 dark:text-white">
          <span class="text-xl">üåç</span> Sprachen
        </h3>
        <ul class="space-y-3">
          {content.languages.map((lang) => (
            <li class="flex flex-col">
              <span class="text-sm font-bold text-gray-900 dark:text-white">{lang.name}</span>
              <span class="text-xs text-indigo-600 dark:text-indigo-400 font-medium">{lang.level}</span>
            </li>
          ))}
        </ul>
      </section>

      {/* Interests Section */}
      <section class="reveal md:col-span-1 bg-white dark:bg-gray-900 rounded-3xl p-6 shadow-sm border border-gray-100 dark:border-gray-800 transition-all duration-300">
        <h3 class="text-lg font-bold mb-4 flex items-center gap-2 dark:text-white">
          <span class="text-xl">‚öΩ</span> Interessen
        </h3>
        <div class="flex flex-wrap gap-2">
          {content.interests.map((interest) => (
            <span class="text-xs font-semibold px-3 py-1.5 bg-gray-50 dark:bg-gray-800 text-gray-600 dark:text-gray-400 rounded-lg border border-gray-100 dark:border-gray-700">
              {interest}
            </span>
          ))}
        </div>
      </section>

    </div>
    
    <footer class="mt-12 text-center text-gray-400 dark:text-gray-600 text-sm pb-8">
      &copy; {new Date().getFullYear()} {content.name} &bull; Gebaut mit Astro & Tailwind CSS
    </footer>
  </main>
</Layout>
